# Environment Variables

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/sepi?schema=public"

# AWS
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_access_key"
AWS_SECRET_ACCESS_KEY="your_secret_key"

# S3
S3_BUCKET_NAME="sepi-storage"
S3_CERTIFICATES_BUCKET="sepi-certificates"

# KMS
KMS_KEY_ID="your_kms_key_id"

# SQS
SQS_FISCAL_QUEUE_URL="https://sqs.us-east-1.amazonaws.com/your-account/sepi-fiscal-queue"

# Tegra API (nfe.io)
# Leave empty to use SIMULATION MODE for development
TEGRA_API_KEY=""
TEGRA_ENVIRONMENT="sandbox" # or "production"
TEGRA_BASE_URL="https://api.sandbox.nfe.io/v1"

# Fiscal Simulation Mode (set to true to simulate fiscal operations)
FISCAL_SIMULATION_MODE=true

# JWT
JWT_SECRET="your_super_secret_jwt_key_change_this_in_production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Email (AWS SES)
SES_FROM_EMAIL="noreply@sepi.pro"
SES_REGION="us-east-1"

# Payment Gateway
PAYMENT_GATEWAY="stripe" # or "mercadopago"
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Logging
LOG_LEVEL="debug"

