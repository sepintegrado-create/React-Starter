# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Node Environment
NODE_ENV=production

# Database (AWS RDS PostgreSQL)
DATABASE_URL=postgresql://sepi_user:STRONG_PASSWORD_HERE@sepi-prod-db.xxxxx.us-east-1.rds.amazonaws.com:5432/sepi_prod?schema=public

# JWT Secrets (Generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AWS S3
AWS_S3_BUCKET=sepi-prod-storage
AWS_S3_REGION=us-east-1

# AWS KMS (for certificate encryption)
AWS_KMS_KEY_ID=your-kms-key-id
AWS_KMS_KEY_ARN=arn:aws:kms:us-east-1:ACCOUNT_ID:key/KEY_ID

# AWS SQS
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/ACCOUNT_ID/sepi-prod-fiscal-queue
AWS_SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/ACCOUNT_ID/sepi-prod-fiscal-dlq

# Tegra API (nfe.io)
# IMPORTANT: Configure real API key for production!
TEGRA_API_KEY=your-tegra-api-key
TEGRA_COMPANY_ID=your-tegra-company-id
TEGRA_ENVIRONMENT=production
TEGRA_BASE_URL=https://api.nfe.io/v1

# Fiscal Simulation Mode
# WARNING: Set to false in production! Only use true for testing.
FISCAL_SIMULATION_MODE=false

# CORS
CORS_ORIGIN=https://sepi.pro
ALLOWED_ORIGINS=https://sepi.pro,https://www.sepi.pro

# Email (AWS SES)
AWS_SES_REGION=us-east-1
EMAIL_FROM=noreply@sepi.pro
EMAIL_SUPPORT=suporte@sepi.pro

# Payment Gateway (Choose one)
# Stripe
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Or Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=APP_USR-xxxxx
MERCADO_PAGO_PUBLIC_KEY=APP_USR-xxxxx
MERCADO_PAGO_WEBHOOK_SECRET=xxxxx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-min-32-chars

# Domain
DOMAIN=sepi.pro
API_URL=https://api.sepi.pro
FRONTEND_URL=https://sepi.pro

# CloudWatch
CLOUDWATCH_LOG_GROUP=/aws/lambda/sepi-prod
CLOUDWATCH_LOG_STREAM=api

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WEBHOOKS=true

# Monitoring
SENTRY_DSN=your-sentry-dsn-if-using
NEW_RELIC_LICENSE_KEY=your-newrelic-key-if-using
