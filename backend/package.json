{
    "name": "sepi-backend",
    "version": "1.0.0",
    "description": "SEPI Backend - Sistema Empresarial Profissional Integrado",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:migrate:deploy": "prisma migrate deploy",
        "prisma:studio": "prisma studio",
        "db:init": "tsx scripts/init-db.ts",
        "db:seed": "tsx scripts/init-db.ts",
        "db:backup": "bash scripts/backup-db.sh prod",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "deploy": "serverless deploy --verbose",
        "deploy:prod": "npm run deploy:check && serverless deploy --stage prod --verbose",
        "deploy:dev": "serverless deploy --stage dev --verbose",
        "deploy:check": "tsx scripts/deploy-check.ts",
        "secrets:generate": "tsx scripts/generate-secrets.ts",
        "health:check": "bash scripts/health-check.sh",
        "remove": "serverless remove",
        "logs": "serverless logs -f",
        "offline": "serverless offline"
    },
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "aws-sdk": "^2.1691.0",
        "axios": "^1.7.9",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "express": "^4.21.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "zod": "^3.24.1",
        "date-fns": "^4.1.0",
        "qrcode": "^1.5.4",
        "node-forge": "^1.3.1"
    },
    "devDependencies": {
        "@types/node": "^22.14.0",
        "@types/express": "^5.0.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/cors": "^2.8.17",
        "prisma": "^5.22.0",
        "tsx": "^4.19.2",
        "typescript": "^5.8.2",
        "vitest": "^2.1.8",
        "serverless": "^4.4.14",
        "serverless-offline": "^14.3.3",
        "serverless-webpack": "^5.14.0",
        "serverless-prune-plugin": "^2.0.2",
        "webpack": "^5.90.0",
        "webpack-node-externals": "^3.0.0",
        "ts-loader": "^9.5.1"
    }
}